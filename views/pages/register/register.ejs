<%- include('../partials/header'); %>
    <center>

        <div class="section"></div>
            <h5 class="indigo-text titre">Créez un compte</h5>
            <div class="section"></div>
        
            <div class="row">
                <div class="card blue-grey darken-1 col s4 offset-s4 row">
                    <img class="responsive-img" style="width: 150px;" src="./img/logo-job-board.png" />

                    <% if(locals.message) { %>
                        <div class="red white-text"><%= message %></div>
                    <% } %>
            
                    <form class="col s12" action="/register" method="POST">
                    <div class="register">
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input id="first_name" name="pe_fname" type="text" class="validate" required>
                                <label for='first_name'>Prénom</label>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input id="last_name" name="pe_lname" type="text" class="validate" required>
                                <label for='last_name'>Nom</label>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate' name="pe_email" type='email' id='email' required>
                                <label for='email'>E-mail</label>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate' name="pe_password" type='password' id='password' required>
                                <label for='password'>Mot de passe</label>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate' name="confirm_pe_password" type='password' id='passwordCheck' required>
                                <label for='passwordCheck'>Confirmation de mot de passe</label>
                            </div>
                        </div>
                    </div>
        
                    <br />
                    <div class="card-action">
                        <button type='submit' name='btn_login' class='btn indigo'>Créer votre compte</button>
                    </div>
                </form>
                </div>
            </div>
            <a class="create" href="login">Vous avez déjà un compte ?</a>
            </center>
        <div class="section"></div>
    <div class="section"></div>
</div><%- include('../partials/footer'); %>