<%- include('../partials/header'); %>
<main>
    <center>

        <div class="section"></div>
            <h5 class="indigo-text titre">Connectez-vous à votre compte</h5>
            <div class="section"></div>
        
            <div class="row">
                <div class="card blue-grey darken-1 col s4 offset-s4 row">
                    <img class="responsive-img" style="width: 150px;" src="./img/logo-job-board.png" />

                    <% if(locals.message) { %>
                        <div class="red white-text"><%= message %></div>
                    <% } %>
        
                <form class="col s12" action="/login" method="POST">
                    <div class='row'>
                    <div class='col s12'>
                    </div>
                    </div>
        
                    <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate' type='email' name='email' id='email' />
                        <label for='email'>E-mail</label>
                    </div>
                    </div>
        
                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='password' name='password' id='password' />
                            <label for='password'>Mot de passe</label>
                        </div>
                    </div>
        
                    <br />
                    <div class="card-action">
                        <button type='submit' name='btn_login' class='btn indigo'>Login</button>
                    </div>
                </form>
                </div>
            </div>
            <a class="create" href="register">Créez un compte</a>
            </center>
        <div class="section"></div>
    <div class="section"></div>
</main>
<%- include('../partials/footer'); %>