<%- include('../partials/header'); %>
<main>
    <center>

        <div class="section"></div>
            <h5 class="indigo-text titre">Connectez-vous à votre compte</h5>
            <div class="section"></div>
        
            <div class="row">
                <div class="card blue-grey darken-1 col s4 offset-s4 row">
                    <img class="responsive-img" style="width: 150px;" src="./img/logo-job-board.png" />
        
                <form class="col s12" action="" method="POST">
                    <div class='row'>
                    <div class='col s12'>
                    </div>
                    </div>
        
                    <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate' type='email' name='email' id='email' />
                        <label for='email'>E-mail</label>
                    </div>
                    </div>
        
                    <div class='row'>
                    <div class='input-field col s12'>
                        <input class='validate' type='password' name='password' id='password' />
                        <label for='password'>Mot de passe</label>
                    </div>
                    <label style='float: right;'>
                                        <a class='indigo-text' href='#!'><b>Mot de passe oublié ?</b></a>
                                    </label>
                    </div>
        
                    <br />
                    <div class="card-action">
                        <a type='submit' name='btn_login' class='btn indigo'>Login</a>
                    </div>
                </form>
                </div>
            </div>
            <a class="create" href="#!">Créez un compte</a>
            </center>
        <div class="section"></div>
    <div class="section"></div>
</main>
<div class="createForm none">
    <center>
        <div class="section"></div>
            <h5 class="indigo-text titre">Créez un compte</h5>
            <div class="section"></div>
        
            <div class="row">
                <div class="card blue-grey darken-1 col s4 offset-s4 row">
                    <img class="responsive-img" style="width: 150px;" src="./img/logo-job-board.png" />
            
                    <form class="col s12" action="/connexion" method="POST">
                    <div class="register">
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input id="first_name" name="pe_fname" type="text" class="validate">
                                <label for='first_name'>Prénom</label>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input id="last_name" name="pe_lname" type="text" class="validate">
                                <label for='last_name'>Nom</label>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate' name="pe_email" type='email' id='email' />
                                <label for='email'>E-mail</label>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate' name="pe_password" type='password' id='password' />
                                <label for='password'>Mot de passe</label>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <input class='validate' name="confirm_pe_password" type='password' id='passwordCheck' />
                                <label for='passwordCheck'>Confirmation de mot de passe</label>
                            </div>
                        </div>
                    </div>
        
                    <br />
                    <div class="card-action">
                        <button type='submit' name='btn_login' class='btn indigo'>Créer votre compte</button>
                    </div>
                </form>
                </div>
            </div>
            <a class="create" href="#!">Vous avez déjà un compte ?</a>
            </center>
        <div class="section"></div>
    <div class="section"></div>
</div><%- include('../partials/footer'); %>
