<%- include('../partials/header_user'); %>

<h3 class="titre"> Bonjour <%= user.pe_fname %>,</h3>

<main>
    <div class="row center-align">
        <% for (const x of ad) { %> 
            <div class="col s10 offset-s1">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <h4 class="titre"><%= x.ad_title %></h4>
                        <p><%= x.co_name %></p>
                    </div>
                    <div class="none white-text left-align container toggleInfo">

                        <h5>Missions</h5>
                        <p>
                            <%= x.ad_mission%>
                        </p>

                        <h5>Profil</h5>
                        <p>
                            <%= x.ad_wantedprofil%>			
                        </p>
                        <h5>Salaire</h5>
                        <p>
                            <%= x.ad_wage%>
                        </p>

                        <h5>Type de contrat</h5>
                        <p>
                            <%= x.ad_jobtype%>
                        </p>
                        <h5>Date de début</h5>
                        <p>
                            <%= x.ad_startdate%>
                        </p>
                        <div class="padding center-align">
                            <a class="btn indigo postuler">Postuler</a>
                        </div>
                        <div class=" row ad_form padding none">
                            <form class="col s12" method="POST" action="">
                                <div class="row">
                                    <div class="input-field col s6">
                                        <input id="first_name" type="text" name="first_name" class="validate" required value = '<%= user.pe_fname %>'>
                                        <label for="first_name">Prénom</label>
                                    </div>
                                    <div class="input-field col s6">
                                        <input id="last_name" type="text" name="last_name" class="validate" required value = '<%= user.pe_lname %>'>
                                        <label for="last_name">Nom</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s6">
                                        <input id="email" type="email" name="email" class="validate" required value = '<%= user.pe_email %>'>
                                        <label for="email">E-mail</label>
                                    </div>
                                    <div class="input-field col s6">
                                        <input id="phone" type="tel" name="phone" class="validate" required>
                                        <label for="phone">Téléphone</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <textarea id="message" name="message" class="materialize-textarea"></textarea>
                                        <label for="message">Message</label>
                                    </div>
                                </div>
                                <input id="ad_id" type="hidden" name="ad_id" value="<%= x.ad_id%>">
                                <input id="co_id" type="hidden" name="co_id" value="<%= x.co_id%>">
                                <input id="pe_id" type="hidden" name="pe_id" value="<%= user.pe_id%>">

                                <div>
                                    <button type="submit" class="btn indigo">
                                    Envoyer
                                    </button>
                                    <a type="submit" class="btn indigo cancel">Annuler</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card-action">
                        <a class="btn toggleBtnLearn indigo">Learn more</a>
                        <a class="btn toggleBtnHide indigo">Hide informations</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>



</main>
<%- include('../partials/footer'); %>